package br.senac.rj.empresa.modelo;

public class Funcionario {
	int registro;
	String nome;
	int cargo;
	double salario;
	
	public double aplicarBonificacao(salario) {
		double novoSalario;
		double bonificacao;
		switch (cargo) {
		case 1:
			bonificacao = salario * 0.2;
			novoSalario = salario + bonificacao;
			return novoSalario;
			break;
		case 2:
			bonificacao = salario * 0.4;
			novoSalario = salario + bonificacao;
			return novoSalario;
			break;
		case 3:
			bonificacao = salario * 0.6;
			novoSalario = salario + bonificacao;
			return novoSalario;
			break;
		default:
			return salario
		}
			
	}
}


