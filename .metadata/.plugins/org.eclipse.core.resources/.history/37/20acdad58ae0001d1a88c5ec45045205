package br.senac.rj.banco.modelo;

public class Conta {
	private int agencia;
	private int numero;
	private double saldo;

	public void deposita(double valor) {
		this.saldo = this.saldo + valor;
	}

	public boolean saca(double valor) {
		double novoSaldo = this.saldo - valor;
		if (novoSaldo < 0)
			return false;
		this.saldo = novoSaldo;
		return true;
	}
}
